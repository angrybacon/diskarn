{
  "engines": {
    "node": "22.19.0"
  },
  "main": "dist/index.js",
  "name": "diskarn",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build": "tsc",
    "database:push": "dotenvx run --convention=nextjs -- drizzle-kit push",
    "dev": "dotenvx run --convention=nextjs -- tsx watch src/index.ts",
    "lint": "pnpm run '/^lint:[^:]+$/'",
    "lint:format": "prettier --check --log-level warn src/",
    "lint:prune": "dotenvx run --convention=nextjs -- knip",
    "lint:typings": "tsc --noEmit",
    "start": "dotenvx run --convention=nextjs -- node .",
    "test": "dotenvx run --convention=nextjs -- jest",
    "test:coverage": "pnpm run test --coverage",
    "test:watch": "pnpm run test --watch"
  },
  "dependencies": {
    "@discordeno/bot": "21.0.0",
    "@dotenvx/dotenvx": "1.49.0",
    "chalk": "4.1.2",
    "drizzle-orm": "0.44.5",
    "fastify": "5.6.0",
    "node-schedule": "2.1.1",
    "pg": "8.16.3",
    "xml-js": "1.6.11",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@korumite/ts": "1.1.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.18.3",
    "@types/node-schedule": "2.1.8",
    "@types/pg": "8.15.5",
    "drizzle-kit": "0.31.4",
    "jest": "29.7.0",
    "knip": "5.63.1",
    "prettier": "3.6.2",
    "ts-jest": "29.4.1",
    "tsx": "4.20.5",
    "typescript": "5.9.2"
  }
}
