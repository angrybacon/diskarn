  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.4.1",
    "@korumite/ts": "1.1.0",
    "@types/node": "22.13.5",
    "@types/node-schedule": "2.1.7",
    "@types/pg": "8.11.11",
    "drizzle-kit": "0.30.4",
    "knip": "5.44.4",
